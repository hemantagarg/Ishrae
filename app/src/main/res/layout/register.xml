<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/ic_splash"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_30"
                android:src="@mipmap/ic_logo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10"
                android:background="@drawable/round_corner_blue_bg"
                android:orientation="vertical"
                android:padding="@dimen/dp_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center|left"

                    android:paddingBottom="@dimen/dp_20"

                    android:text="@string/Non_Member_Register"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_22" />

                <EditText
                    android:id="@+id/eTextUSerNameR"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:background="@android:color/transparent"
                    android:drawableLeft="@mipmap/ic_user"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="center_vertical"
                    android:hint="@string/name"
                    android:inputType="textEmailAddress"
                    android:maxLength="100"
                    android:maxLines="1"
                    android:paddingRight="@dimen/dp_15"
                    android:textColor="@color/white"
                    android:textColorHint="@color/light_gray"
                    android:textCursorDrawable="@drawable/cursor_bg"
                    android:textSize="@dimen/sp_16" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:background="@color/light_gray" />

                <EditText
                    android:id="@+id/eTextMNumberR"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:background="@android:color/transparent"
                    android:drawableLeft="@mipmap/ic_mobile_green"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="center_vertical"
                    android:hint="@string/enter_mobile_number"
                    android:inputType="number"
                    android:maxLength="15"
                    android:maxLines="1"
                    android:paddingRight="@dimen/dp_15"
                    android:textColor="@color/white"
                    android:textColorHint="@color/light_gray"
                    android:textCursorDrawable="@drawable/cursor_bg"
                    android:textSize="@dimen/sp_16" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:background="@color/light_gray" />

                <EditText
                    android:id="@+id/eTextEmailR"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:background="@android:color/transparent"
                    android:drawableLeft="@mipmap/ic_email_green"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="center_vertical"
                    android:hint="@string/enter_email"
                    android:inputType="textEmailAddress"
                    android:maxLength="100"
                    android:maxLines="1"
                    android:paddingRight="@dimen/dp_15"
                    android:textColor="@color/white"
                    android:textColorHint="@color/light_gray"
                    android:textCursorDrawable="@drawable/cursor_bg"
                    android:textSize="@dimen/sp_16" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:background="@color/light_gray" />


                <EditText
                    android:id="@+id/eTextPasswordR"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:background="@android:color/transparent"
                    android:drawableLeft="@mipmap/ic_pass"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="center_vertical"
                    android:hint="@string/password"
                    android:inputType="textPassword"
                    android:maxLength="13"
                    android:paddingRight="@dimen/dp_15"
                    android:textColor="@color/white"
                    android:textColorHint="@color/light_gray"
                    android:textCursorDrawable="@drawable/cursor_bg"
                    android:textSize="@dimen/sp_16" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:background="@color/light_gray" />


                <Button
                    android:id="@+id/btnRegister"
                    style="@style/button_style_login_signup"
                    android:layout_marginTop="@dimen/dp_20"
                    android:background="@drawable/login_btn_bg"
                    android:text="@string/Register" />

                <TextView
                    android:id="@+id/txtLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_10"
                    android:text="@string/login"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>