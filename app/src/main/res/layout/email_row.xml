<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_10"
    android:layout_marginTop="@dimen/dp_10"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:elevation="@dimen/dp_5"
        card_view:cardCornerRadius="@dimen/dp_2"
        card_view:cardUseCompatPadding="true"
        card_view:contentPadding="@dimen/dp_5">
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_5">
        <TextView
            android:id="@+id/txtMailDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/dp_5"
            android:paddingTop="@dimen/dp_2"
            android:textColor="@color/gray"
            android:textSize="@dimen/sp_12" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_5"
            android:orientation="horizontal"
            android:padding="@dimen/dp_2">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/dp_5"
                android:orientation="vertical">

                <com.ishrae.app.custom.CircleImageView
                    android:id="@+id/imgEmail"
                    android:layout_width="@dimen/dp_35"
                    android:layout_height="@dimen/dp_35"
                    android:padding="5dp"
                    android:src="@mipmap/ic_email_circle1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtMailFrom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:paddingTop="@dimen/dp_2"

                    android:textColor="@color/colorHighlight"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/txtMailSubject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:minLines="2"
                    android:paddingTop="@dimen/dp_2"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/sp_14" />


            </LinearLayout>
        </LinearLayout>
</FrameLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>